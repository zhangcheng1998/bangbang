<!--pages/store/store.wxml-->
<cu-custom bgColor="bg-gradual-blue">
  <view slot="content">集市</view>
</cu-custom>

<!-- 堆叠式轮播 -->
<view class="tower-swiper" bindtouchmove="towerMove" bindtouchstart="towerStart" bindtouchend="towerEnd">
  <view class="tower-item {{item.zIndex==1?'none':''}}" wx:for="{{swiperList}}" wx:key
    style="--index:{{item.zIndex}};--left:{{item.mLeft}}">
    <view class="swiper-item">
      <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
      <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover"
        wx:if="{{item.type=='video'}}"></video>
    </view>
  </view>
</view>

<view class="bg-white ">
  <view class="grid col-2  text-center padding">
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-red">{{silverCount}}</view>
      总收益(元)
    </view>
    <view class="flex flex-sub flex-direction ">
      <view class="text-xxl text-red">{{silverCount}}</view>
      已经消费(元)
    </view>
  </view>
</view>

<view class="padding flex text-center text-grey bg-white shadow-warp margin">
  <view class="flex flex-sub flex-direction solid-right">
    <view class="text-xxl text-orange">{{silverCount}}</view>
    <view class="margin-top-sm">
      <text class="cuIcon-attentionfill"></text> 碎银/两
    </view>
  </view>
  <view class="flex flex-sub flex-direction solid-right">
    <view class="text-xxl text-blue">{{silkCount}}</view>
    <view class="margin-top-sm">
      <text class="cuIcon-favorfill"></text> 丝绸/匹
    </view>
  </view>
  <view class="flex flex-sub flex-direction">
    <view class="text-xxl text-green">{{spicesCount}}</view>
    <view class="margin-top-sm">
      <text class="cuIcon-fork"></text> 香料/两
    </view>
  </view>
</view>

<view class="bg-white ">
  <view class="grid col-2  text-center">
    <view class=" padding solid-right ">
      <button class="text-xxl bg-cyan ">提现</button>
    </view>
    <view class=" padding">
      <button class="text-xxl bg-cyan">敬请期待</button>
    </view>
  </view>
</view>